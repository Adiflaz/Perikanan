                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ikan & Kolam"
                            android:textSize="12sp"
                            android:textColor="@color/teal_700"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Monitoring -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_monitoring"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/indigo_100">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“Š"
                            android:textSize="24sp"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monitoring"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/indigo_900"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Harian Budidaya"
                            android:textSize="12sp"
                            android:textColor="@color/indigo_700"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:id="@+id/tv_credit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aplikasi Budidaya Ikan Air Tawar\nVersi 2.0\nÂ© Adif Lazuardi Imani"
            android:textSize="12sp"
            android:textColor="@color/gray_600"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:padding="16dp"
            android:background="@color/white"
            android:elevation="2dp"/>
    </LinearLayout>
</ScrollView>