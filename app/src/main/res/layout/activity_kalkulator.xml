<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green_50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KALKULATOR PAKAN & PROTEIN"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/green_900"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@color/green_100"/>

        <!-- Input Form -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Ikan:"
            android:textSize="14sp"
            android:textColor="@color/green_800"
            android:layout_marginTop="8dp"/>

        <Spinner
            android:id="@+id/spinner_ikan"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_background"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fase Pertumbuhan:"
            android:textSize="14sp"
            android:textColor="@color/green_800"
            android:layout_marginTop="12dp"/>

        <Spinner
            android:id="@+id/spinner_fase"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_background"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Pakan:"
            android:textSize="14sp"
            android:textColor="@color/green_800"
            android:layout_marginTop="12dp"/>

        <Spinner
            android:id="@+id/spinner_pakan"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_background"/>

        <!-- Kadar Protein Custom -->
        <LinearLayout
            android:id="@+id/layout_kadar_protein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kadar Protein Pakan (%):"
                android:textSize="14sp"
                android:textColor="@color/green_800"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/et_kadar_protein"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="numberDecimal"
                android:hint="Contoh: 32.5"
                android:background="@drawable/edittext_background"/>
        </LinearLayout>

        <!-- Jumlah Ikan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Ikan (ekor):"
            android:textSize="14sp"
            android:textColor="@color/green_800"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/et_jumlah_ikan"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:hint="Contoh: 1000"
            android:background="@drawable/edittext_background"/>

        <!-- Berat Rata-rata -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berat Rata-rata (gram):"
            android:textSize="14sp"
            android:textColor="@color/green_800"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/et_berat"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="numberDecimal"
            android:hint="Contoh: 50"
            android:background="@drawable/edittext_background"/>

        <!-- Harga Pakan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga Pakan per kg (Rp):"
            android:textSize="14sp"
            android:textColor="@color/green_800"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/et_harga_pakan"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="numberDecimal"
            android:hint="Contoh: 15000"
            android:background="@drawable/edittext_background"/>

        <!-- Tombol -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_hitung"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="HITUNG"
                android:backgroundTint="@color/green_600"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="RESET"
                android:backgroundTint="@color/gray_400"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!-- Hasil -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HASIL PERHITUNGAN:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/green_800"
            android:layout_marginBottom="8dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tv_hasil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hasil akan ditampilkan di sini"
                android:textSize="12sp"
                android:lineSpacingExtra="4dp"
                android:padding="16dp"
                android:background="@color/white"
                android:elevation="2dp"/>
        </ScrollView>
    </LinearLayout>
</ScrollView>